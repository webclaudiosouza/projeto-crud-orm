<% include ../partials/header.ejs %>


<h1>Lista de pessoas</h1>

<table class="table table-striped table-hover table-bordered">
    <tr class="thead-dark">
        <th>Nome</th>
        <th>Cargo</th>
        <th>ações</th>
    </tr>
    <% pessoas.map( pessoa => {%>
    <tr>
            <td><%= pessoa.nome %></td>
            <td><%= pessoa.cargo %></td>
            <td>
                <div class="btn btn-group ml-5" role="group">
                    <a href="/pessoas/edit/ <%= pessoa.id %>" class="btn btn-primary">Editar</a>
                    <a href="/pessoas/delete/ <%= pessoa.id %>" class="btn btn-danger">Excluir</a>
                </div>
                
            </td>

    </tr>
    <% }) %>
</table>


